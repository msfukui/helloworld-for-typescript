{
  "name": "helloworld-for-typescript",
  "version": "0.0.1",
  "description": "`Hello world` for TypeScript",
  "repository": "https://github.com/msfukui/helloworld-for-typescript.git",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/lib/index.ts",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "bin": {
    "helloworld-for-typescript": "dist/src/index.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "run-p build:*",
    "build:common": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "fix": "npm run format && npm run lint",
    "format": "npm run lint:prettier -- --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext ts,js .",
    "lint:prettier": "prettier -l \"**/*.{json,md,yml,ts,js}\"",
    "lint:type": "tsc --noEmit",
    "test": "run-s lint test:*",
    "test:unit": "jest"
  },
  "keywords": [],
  "author": "msfukui",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.3",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "6.0.0",
    "jest": "^27.0.1",
    "lint-staged": "11.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.1",
    "typescript": "^4.3.2"
  },
  "engines": {
    "node": ">= 10",
    "npm": ">= 6.11"
  }
}
